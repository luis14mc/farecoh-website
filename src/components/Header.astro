---
const currentPath = Astro.url.pathname;
---

<header class="navbar bg-base-100 shadow-lg sticky top-0 z-50">
  <div class="navbar-start">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost lg:hidden" id="mobile-menu-btn">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"></path>
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52 hidden" id="mobile-menu">
        <li><a href="/" class={currentPath === '/' ? 'active' : ''}>Inicio</a></li>
        <li><a href="/acerca" class={currentPath === '/acerca' ? 'active' : ''}>Acerca de</a></li>
        <li><a href="/programas" class={currentPath === '/programas' ? 'active' : ''}>Programas</a></li>
        <li><a href="/eventos" class={currentPath === '/eventos' ? 'active' : ''}>Eventos</a></li>
        <li><a href="/galeria" class={currentPath === '/galeria' ? 'active' : ''}>Galería</a></li>
        <li><a href="/noticias" class={currentPath === '/noticias' ? 'active' : ''}>Noticias</a></li>
        <li><a href="/contacto" class={currentPath === '/contacto' ? 'active' : ''}>Contacto</a></li>
      </ul>
    </div>
    <a href="/" class="btn btn-ghost text-lg lg:text-xl font-bold text-primary flex items-center">
      <img src="/images/Logo Farecoh VARIANTE.png" alt="FARECOH" class="h-6 lg:h-8 w-auto mr-1 lg:mr-2" />
      <span class="font-serif hidden sm:inline">FARECOH</span>
    </a>
  </div>
  
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <li><a href="/" class={`hover:text-primary ${currentPath === '/' ? 'text-primary font-semibold' : ''}`}>Inicio</a></li>
      <li><a href="/acerca" class={`hover:text-primary ${currentPath === '/acerca' ? 'text-primary font-semibold' : ''}`}>Acerca de</a></li>
      <li><a href="/programas" class={`hover:text-primary ${currentPath === '/programas' ? 'text-primary font-semibold' : ''}`}>Programas</a></li>
      <li><a href="/eventos" class={`hover:text-primary ${currentPath === '/eventos' ? 'text-primary font-semibold' : ''}`}>Eventos</a></li>
      <li><a href="/galeria" class={`hover:text-primary ${currentPath === '/galeria' ? 'text-primary font-semibold' : ''}`}>Galería</a></li>
      <li><a href="/noticias" class={`hover:text-primary ${currentPath === '/noticias' ? 'text-primary font-semibold' : ''}`}>Noticias</a></li>
      <li><a href="/contacto" class={`hover:text-primary ${currentPath === '/contacto' ? 'text-primary font-semibold' : ''}`}>Contacto</a></li>
    </ul>
  </div>
  
  <div class="navbar-end">
    <a href="/donar" class="btn btn-primary btn-sm">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
      </svg>
      <span class="hidden sm:inline">Donar</span>
    </a>
  </div>
</header>
