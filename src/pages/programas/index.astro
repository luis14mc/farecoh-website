<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLButtonElement>;
    const programCards = document.querySelectorAll('.program-card') as NodeListOf<HTMLElement>;

    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const category = (this as HTMLButtonElement).dataset.category;
        
        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('btn-primary', 'active');
          btn.classList.add('btn-outline');
        });
        (this as HTMLButtonElement).classList.remove('btn-outline');
        (this as HTMLButtonElement).classList.add('btn-primary', 'active');
        
        // Filter programs with animation
        programCards.forEach(card => {
          const cardElement = card as HTMLElement;
          if (category === 'all' || cardElement.dataset.category === category) {
            cardElement.style.display = 'block';
            cardElement.classList.add('animate-fade-in');
            setTimeout(() => {
              cardElement.classList.remove('animate-fade-in');
            }, 500);
          } else {
            cardElement.style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  /* Animation classes */
  .animate-fade-in {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from { 
      opacity: 0; 
      transform: translateY(30px) scale(0.95); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  /* Text clipping utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Hover effects */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  .group:hover .group-hover\:rotate-12 {
    transform: rotate(12deg);
  }

  /* Custom shadows */
